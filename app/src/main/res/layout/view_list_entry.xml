<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/list_entry_round_image"
        android:layout_width="@dimen/round_image"
        android:layout_height="@dimen/round_image"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:id="@+id/list_entry_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/list_entry_launch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SubheadingText"
            />

        <TextView
            android:id="@+id/list_entry_launch_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BodyText"
            />

        <TextView
            android:id="@+id/list_entry_launch_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>